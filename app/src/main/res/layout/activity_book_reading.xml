<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zion.remember.book.page.PageView
        android:id="@+id/page_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/book_tool_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_191919"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tool_chapter_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="目录"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/ic_read_menu_category" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="亮度"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/ic_read_menu_morning" />

            <TextView
                android:id="@+id/tool_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:drawableTopCompat="@drawable/ic_read_menu_font" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_tool_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/book_tool_layout"
        android:background="@color/color_191919"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字号"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/font_dec"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="A-"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/font_size"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="40"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/font_inc"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="A+"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背景"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/bg_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bg_cec29c"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:background="@color/color_CEC29C"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/bg_ccebcc"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/color_CCEBCC"
                    android:checked="true"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻页"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <RadioGroup
                android:id="@+id/anim_mode_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/anim_mode_simulate"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="仿真"
                    android:checked="true"
                    android:background="@drawable/book_anim_bg"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/anim_mode_slide"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/book_anim_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="滑动"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/anim_mode_cover"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/book_anim_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="覆盖"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RadioGroup>



        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>