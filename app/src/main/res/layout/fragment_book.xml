<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.BookFragment">

    <TextView
        android:id="@+id/local_book_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="本地书籍"/>
    <TextView
        android:id="@+id/auto_add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/local_book_tv"
        app:layout_constraintBottom_toBottomOf="@id/local_book_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:text="自动加载"/>
    <TextView
        android:id="@+id/manual_add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/local_book_tv"
        app:layout_constraintBottom_toBottomOf="@id/local_book_tv"
        app:layout_constraintEnd_toStartOf="@id/auto_add_book"
        android:layout_marginEnd="16dp"
        android:text="手动加载"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/local_book_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/local_book_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/local_book_rv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="书架"/>


</androidx.constraintlayout.widget.ConstraintLayout>